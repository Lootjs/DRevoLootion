{
  "name": "drevolootion",
  "displayName": "DRevoLootion",
  "description": "More powers for DR project",
  "publisher": "Lootjs",
  "version": "0.0.4",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.72.0"
  },
  "repository": {
    "url": "https://github.com/Lootjs/DRevoLootion"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:vue"
  ],
  "main": "./extension.js",
  "contributes": {
    "capabilities": {
      "hoverProvider": "true"
    },
    "configuration": [
      {
        "type": "object",
        "title": "Locales directory",
        "properties": {
          "drevolootion.localesDirectory": {
            "type": "string",
            "default": "src/assets/locales",
            "markdownDescription": "Specifies the folder path containing locales files."
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
